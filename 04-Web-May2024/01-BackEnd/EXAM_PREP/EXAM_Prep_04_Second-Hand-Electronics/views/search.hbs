<section class="search">
    <h1>Search</h1>

    <form class="search-form" method="get">
        <input type="text" class="search-name" name="name" placeholder="Search Name..." {{#if data.name}}value="{{data.name}}" {{/if}}>
        <input type="text" class="search-type" name="type" placeholder="Search Type..." {{#if data.type}}value="{{data.type}}" {{/if}}>
        <button type="submit" class="btn-search">Search</button>
    </form>

    {{#if products}}
    <!--If there are matches after search-->
    <div class="search-result">
        <div class="search-list">
            {{#each products }}
            {{> product}}
            {{/each}}
        </div>

    </div>
    {{else}}
        <div class="no-match">
            <p>No match was found!</p>
        </div>
    {{/if}}

</section>