<section class="form-container">
    <h2>Create Product Card</h2>
    <form method="post">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" {{#if data.name}}value="{{data.name}}" {{/if}} >

        <label for="skin">Skin Type:</label>
        <textarea id="skin" name="skin">{{#if data.skin}} {{data.skin}} {{/if}}</textarea>

        <label for="description">Product Description:</label>
        <textarea id="description" name="description">{{#if data.description}} {{data.description}} {{/if}}</textarea>

        <label for="ingredients">Key Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{#if data.ingredients}} {{data.ingredients}} {{/if}}</textarea>

        <label for="benefits">Benefits:</label>
        <textarea id="benefits" name="benefits">{{#if data.benefits}} {{data.benefits}} {{/if}}</textarea>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" {{#if data.price}}value="{{data.price}}" {{/if}} >

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" {{#if data.image}}value="{{data.image}}" {{/if}} >

        <button type="submit">Create Product Card</button>
    </form>
</section>