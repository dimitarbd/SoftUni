    <section class="details-hero">
        {{#with product}}
        <div class="container">
            <h2>Laptop Details</h2>
        </div>
    </section>

    <section class="details-content">
        <div class="container">
            <div class="product-details">
                <div class="product-image">
                    <img src="{{image}}" alt="Laptop">
                </div>
                <div class="product-info">
                    <h3>Brand: {{brand}}</h3>
                    <p><strong>Model:</strong> {{model}}</p>
                    <p><strong>Hard Disk:</strong> {{hardDisk}}</p>
                    <p><strong>Screen Size:</strong> {{screenSize}}</p>
                    <p><strong>RAM:</strong> {{ram}}</p>
                    <p><strong>Operating System:</strong> {{operatingSystem}}</p>
                    <p><strong>CPU:</strong> {{cpu}}</p>
                    <p><strong>GPU:</strong> {{gpu}}</p>
                    <p><strong>Price:</strong> ${{price}}</p>
                    <p><strong>Color:</strong> {{color}}</p>
                    <p><strong>Weight:</strong> {{weight}}</p>
                </div>
            </div>
            <div class="product-actions">
                <button class="btn edit"><a href="">Edit</a></button>
                <button class="btn delete"><a href="">Delete</a></button>
                <button class="btn prefer"><a href="">Prefer</a></button>
                 <p class="prefer-message">You've already preferred this device</p>
            </div>
        </div>
        {{/with}}
    </section>