<section id="editPage">
    <form id='editForm' action="#" method="">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{data.name}}">

        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="{{data.type}}">

        <label for="production">Year of Production:</label>
        <input type="number" id="production" name="production" value="{{data.production}}">

        <label for="exploitation">Years of Exploitation:</label>
        <input type="number" id="exploitation" name="exploitation" value="{{data.exploitation}}">

        <label for="damages">Damages:</label>
        <input type="text" id="damages" name="damages" value="{{data.damages}}">

        <label for="image">Image:</label>
        <input type="text" id="image" name="image" value="{{data.image}}">

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{data.price}}">

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" value="{{data.description}}">

        <input type="submit" class="edit" value="Edit Offer">
    </form>
</section>