{% if subtitle.size > 0 %}
    <span class="subtitle">
    {{ subtitle  }}
</span>
{% endif %}

{% if title.size > 0 %}
    <h2 class="title">
        {{ title  }}
    </h2>
{% endif %}

{% if description.size > 0 %}
    <div class="description {% if descriptionStyle %}collection__description {{ descriptionStyle }}{% endif %}">
        {{ description }}
    </div>
{% endif %}